<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="400.0" maxWidth="600.0" minHeight="600.0" minWidth="1000.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: beige;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shopping.view.CatalogController">
   <top>
      <VBox alignment="BOTTOM_LEFT" prefHeight="84.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="70.0" prefWidth="1056.0" text="Inventory">
                     <font>
                        <Font size="48.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="23.0" prefWidth="1000.0">
               <children>
                  <HBox prefHeight="27.0" prefWidth="295.0" style="-fx-border-color: black;">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" minWidth="100.0" prefHeight="31.0" prefWidth="41.0" text="Search" />
                        <TextField fx:id="searchField" minWidth="150.0" onAction="#handleSearchField" prefHeight="25.0" prefWidth="157.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                        <ComboBox fx:id="category" minWidth="150.0" prefHeight="25.0" prefWidth="106.0" promptText="Category" />
                     </children>
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox prefHeight="345.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="276.0" prefWidth="1000.0">
               <children>
                  <ListView fx:id="itemsView" prefHeight="240.0" prefWidth="901.0" style="-fx-border-color: black;" />
               </children>
            </HBox>
            <ButtonBar>
               <buttons>
                  <Button fx:id="newItemBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleNewItemBtn" prefHeight="25.0" prefWidth="116.0" style="-fx-background-color: orange; -fx-border-color: black;" text="New Item" visible="false" />
                  <Button fx:id="editItemBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleEditItemBtn" prefHeight="25.0" prefWidth="116.0" style="-fx-background-color: orange; -fx-border-color: black;" text="Edit Item" visible="false" />
                  <Button fx:id="removeItemBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleRemoveBtn" prefHeight="25.0" prefWidth="116.0" style="-fx-background-color: orange; -fx-border-color: black;" text="Remove Item" visible="false" />
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleAddToCart" prefHeight="25.0" prefWidth="116.0" style="-fx-background-color: orange; -fx-border-color: black;" text="Add to cart" />
               </buttons>
               <padding>
                  <Insets right="50.0" />
               </padding>
            </ButtonBar>
            <VBox prefHeight="167.0" prefWidth="1000.0" style="-fx-border-color: black;">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
               <children>
                  <HBox prefHeight="67.0" prefWidth="898.0">
                     <children>
                        <Label fx:id="name" prefHeight="77.0" prefWidth="182.0" text="Name:">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="price" prefHeight="67.0" prefWidth="183.0" text="Price:" />
                        <Label fx:id="quantity" prefHeight="72.0" prefWidth="121.0" text="Quantity:" />
                     </children>
                  </HBox>
                  <HBox prefHeight="99.0" prefWidth="898.0">
                     <children>
                        <HBox prefHeight="76.0" prefWidth="420.0">
                           <children>
                              <Label fx:id="description" prefHeight="85.0" prefWidth="260.0" text="Description">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>